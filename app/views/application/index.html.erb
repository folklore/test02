<h1>Flickr's humbnails</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_tag :search,
                  remote: true,
                  role: "form",
                  class: "form-inline" do %>
      <div class="form-group">
        <%= text_field_tag :query, 'flickr', class: "form-control" %>
      </div>
      <%= submit_tag nil, name: nil, class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= form_tag :set_expire,
                  remote: true,
                  role: "form",
                  class: "form-inline" do %>
      <div class="form-group">
        expires_in: <%= text_field_tag :expire, 60, class: "form-control" %> минут
      </div>
      <%= submit_tag nil, name: nil, class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</div>

<div class='clearfix h20'></div>

<div class="row" id='humbnails'>
</div>